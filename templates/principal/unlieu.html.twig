{% extends "base.html.twig" %}

{% block title %}
    {{ titre }}
{% endblock %}
{% block body %}
    <h2> Nom du lieu : {{ lieu.nom}}</h2>
        <table>
            <thead>
                <tr>
                    <th>id</th>
                    <th>nom</th>
                    <th>salaire</th>
                </tr>
            </thead>
            <tbody>
                {% for employe in lieu.employes %}
                <tr>
                    <td>{{ employe.id }}</td>
                    <td>{{ employe.nom }}</td>
                    <td>{{ employe.salaire }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
{% endblock %}